@model TekhnelogosInterviewProject.Entity.DTOs.CargoDto
@{
    ViewData["Title"] = "Kargo Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1>Yeni Kargo Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCargo", "Cargo", FormMethod.Post))
{
<div class="form-group" style="width:800px;margin:auto">
    @Html.Label("Kargo Adı")
    @Html.TextBoxFor(x => x.CargoName, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.HeadingName, "", new { @style = "color:red" })*@
    <br />

    @if ((int)ViewBag.vlcCustomerCount > 1)
    {
        @Html.Label("Müşteri")
        @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.vlcCustomer, "-Lütfen Seçiniz-", new { @class = "form-control" })
        @*@Html.ValidationMessageFor(x => x.CategoryId, "", new { @style = "color:red" })*@
        <br />
    }
    else
    {
        @Html.Label("Müşteri")
        @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.vlcCustomer, new { @class = "form-control", disabled = "disabled"})
        @*@Html.ValidationMessageFor(x => x.CategoryId, "", new { @style = "color:red" })*@
        <br />
    }


    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.PersonalId, (List<SelectListItem>)ViewBag.vlcPersonal, "-Lütfen Seçiniz-", new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.WriterId, "", new { @style = "color:red" })*@
    <br />
    @Html.Label("Kargo Fiyatı")
    @Html.TextBoxFor(x => x.CargoPrice, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.WriterId, "", new { @style = "color:red" })*@
    @*<br />
        @Html.Label("Kargo Alınma Tarihi")
        @Html.TextBoxFor(x => x.ShippingDate, new { @class = "form-control" })*@
    @*@Html.ValidationMessageFor(x => x.WriterId, "", new { @style = "color:red" })*@
    <br />
    <button class="btn btn-info">Kargo Ekle</button>
</div>
}

