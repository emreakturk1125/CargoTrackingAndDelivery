@using TekhnelogosInterviewProject.Entity.DTOs

@model List<CustomerDto>


@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ 
    string statusColor = "";
}

<!-- Site wrapper -->
<div class="wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Müşteri Listesi</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Müşteri Listesi</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <a href="/Customer/AddCustomer/" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Müşteri
            </a>

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 5%">
                                #
                            </th>
                            <th style="width: 15%">
                                Müşteri Adı
                            </th>
                            <th style="width: 15%">
                                Müşteri Soyadı
                            </th>
                            <th style="width: 20%">
                                Adres
                            </th>
                            <th style="width: 15%">
                                Durum
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (item.IsActive)
                            {
                                statusColor = "badge badge-success";
                            }
                            else
                            {
                                statusColor = "badge badge-danger";
                            }

                            <tr>
                                <td>
                                    @item.CustomerId
                                </td>
                                <td>
                                    @item.CustomerName
                                </td>
                                <td>
                                    @item.CustomerSurname
                                </td>
                                <td>
                                    @item.CustomerAddress
                                </td>
                                <td>
                                    <span class="@statusColor"> @(item.IsActive ? "Aktif":"Pasif")</span>
                                </td>


                                <td class="project-actions text-right">
                                    @if (item.IsActive)
                                    {
                                        <a class="btn btn-default btn-sm" href="/Cargo/AddCargo/@item.CustomerId">
                                            <i class="fas fa-plus">
                                            </i>
                                            Kargo İşlemleri
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-default btn-sm disabled" href="/Cargo/AddCargo/@item.CustomerId">
                                            <i class="fas fa-plus">
                                            </i>
                                            Kargo İşlemleri
                                        </a>
                                    }
                                    <a class="btn btn-info btn-sm" href="/Customer/EditCustomer/@item.CustomerId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Customer/DeleteCustomer/@item.CustomerId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>



