@model TekhnelogosInterviewProject.Entity.DTOs.CustomerDto

@{
    ViewData["Title"] = "Müşteri Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Müşteri Düzenleme Sayfası</h2>
<br />

@using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post))
{
<div class="form-group" style="width:800px;margin:auto">
    @Html.Hidden("Müşteri Id")
    @Html.HiddenFor(x => x.CustomerId, new { @class = "form-control" })
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.HeadingName, "", new { @style = "color:red" })*@
    <br />
    @Html.Label("Müşteri Soyadı")
    @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
    <br />
    @Html.Label("Müşteri Adres")
    @Html.TextBoxFor(x => x.CustomerAddress, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.CheckBoxFor(x => x.IsActive, new { @style = "width:5%" })
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
</div>
}



